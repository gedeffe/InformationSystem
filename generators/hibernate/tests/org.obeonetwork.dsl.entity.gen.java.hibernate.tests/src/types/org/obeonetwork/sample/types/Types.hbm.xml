<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">

    <class 
    	name="org.obeonetwork.sample.types.Types" 
    	table="TYPES"
		dynamic-update="true">

		<!-- Technical ID -->
        <id name="id" type="string" unsaved-value="null" column="ID">
            <generator class="uuid"/>
        </id>

		<!-- Properties -->
        <property name="myBoolean">
            <column name="MY_BOOLEAN"/>
        </property>
        <property name="myDate">
            <column name="MY_DATE"/>
        </property>
        <property name="myDouble">
            <column name="MY_DOUBLE"/>
        </property>
        <property name="myMail">
            <column name="MY_MAIL"/>
        </property>
        <property name="myFloat">
            <column name="MY_FLOAT"/>
        </property>
        <property name="myInteger">
            <column name="MY_INTEGER"/>
        </property>
        <property name="myLong">
            <column name="MY_LONG"/>
        </property>
        <property name="myString">
            <column name="MY_STRING"/>
        </property>


		<!-- Associations -->


		<!-- Inheritance -->


    </class>

</hibernate-mapping>
