			name="target" 
			class="org.obeonetwork.sample.inheritanceassociations.Class11END" 
			column="FK_CLASS_1_1_END_TARGET_ID"
			unique="true"
			cascade="persist,merge,save-update"
			not-null="true"
			/>


		<!-- Inheritance -->

