<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">

    <class 
    	name="org.obeonetwork.sample.collections.composition.onetomanycomp.A" 
    	table="A"
		dynamic-update="true">

		<!-- Technical ID -->
        <id name="id" type="string" unsaved-value="null" column="ID">
            <generator class="uuid"/>
        </id>

		<!-- Properties -->


		<!-- Associations -->

		<!--  ___            ___
			 | A |- * -} * -| B |
			  ___            ___
		-->
		<set name="b" table="A_B">
			<key column="A_ID"/>
			<many-to-many 
				class="org.obeonetwork.sample.collections.composition.onetomanycomp.B"
				column="B_ID"/>
	     </set>


		<!-- Inheritance -->


    </class>

</hibernate-mapping>
