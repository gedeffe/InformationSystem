        </id>

		<!-- Properties -->
        <property name="myAttribute">
            <column name="MY_ATTRIBUTE"/>
        </property>
        <property name="myId">
            <column name="MY_ID"/>
        </property>


		<!-- Associations -->


		<!-- Inheritance -->


    </class>

</hibernate-mapping>
