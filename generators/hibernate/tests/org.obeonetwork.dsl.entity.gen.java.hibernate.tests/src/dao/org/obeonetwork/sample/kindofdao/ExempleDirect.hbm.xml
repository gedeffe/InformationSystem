    <class 
    	name="org.obeonetwork.sample.kindofdao.ExempleDirect" 
    	table="EXEMPLE_DIRECT"
		dynamic-update="true">

		<!-- Technical ID -->
        <id name="id" type="string" unsaved-value="null" column="ID">
