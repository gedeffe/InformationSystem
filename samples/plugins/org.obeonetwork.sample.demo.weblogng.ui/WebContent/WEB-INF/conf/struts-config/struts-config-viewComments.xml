<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

    <!-- ========== Form Bean Definitions ================================== -->
    <form-beans type="org.apache.struts.action.ActionFormBean">
		<form-bean name="ViewCommentsForm" type="org.obeonetwork.sample.demo.weblogng.ui.main.forms.ViewCommentsForm" />
	</form-beans>

	<!-- ========== Action Mapping Definitions =============================== -->
    <action-mappings >
		<action	path="/viewcomments/viewcomments" 
				type="org.springframework.web.struts.DelegatingActionProxy" 
				parameter="event" 
				name="ViewCommentsForm" 
				scope="request" 
				validate="false" 
				input=".view.ViewComments">
			<forward name="self" path=".view.ViewComments" />
			<forward name="viewLogs" path="/pages/viewlogs/viewlogs?event=init" /> 
		</action>
	</action-mappings>

</struts-config>