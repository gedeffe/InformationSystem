<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">

    <class 
    	name="org.obeonetwork.sample.demo.weblogng.informations.Tag" 
    	table="TAG"
		dynamic-update="true">

		<!-- Technical ID -->
        <id name="id" type="string" unsaved-value="null" column="ID">
            <generator class="uuid"/>
        </id>

		<!-- Properties -->
        <property name="name">
            <column name="NAME"/>
        </property>


		<!-- Associations -->

		<!--  _____             ____________
			 | TAG |- * {-} * -| BLOG_ENTRY |
			  _____             ____________
		-->
		<set name="isTagOf" table="TAG_BLOG_ENTRY">
			<key column="TAG_ID"/>
			<many-to-many 
				class="org.obeonetwork.sample.demo.weblogng.blog.BlogEntry"
				column="BLOG_ENTRY_ID"/>
	     </set>



		<!-- Inheritance -->


    </class>

</hibernate-mapping>
