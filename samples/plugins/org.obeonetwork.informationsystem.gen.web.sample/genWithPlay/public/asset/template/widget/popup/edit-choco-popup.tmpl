<script type="text/x-handlebars" data-template-name="edit-choco-popup">
	<!-- Start of user code edit-choco-popup -->
		<div id="choco" class="modal fade in">
	
		<div class="modal-header">
			<a {{action "cancelForm"}} class="close" data-dismiss="modal">x</a>
			<h3 class="title">{{choco.shortDescription}}</h3>
		</div>
	
		<div class="modal-body">
			
			<form class="form-horizontal">
				
				<div class="control-group">
					<label class="control-label">ShortDescription </label>
					<div class="controls">
							{{view TextField class="span2" valueBinding="choco.shortDescription" placeholder="A short description"}}
						<span class="help-inline" style="display: none;">this field is required</span>
					</div>
				</div>	
				<div class="control-group">
					<label class="control-label">Description </label>
					<div class="controls">
							{{view TextField class="span2" valueBinding="choco.description" placeholder="A complete description with all information."}}
						<span class="help-inline" style="display: none;">this field is required</span>
					</div>
				</div>	
				<div class="control-group">
					<label class="control-label">User </label>
					<div class="controls">
						{{view Select viewName="select" contentBinding="userProxies" class="span2"
													  optionLabelPath="content.desc" optionValuePath="content.id" selectionBinding="choco.userProxy"}}
						
						<span class="help-inline" style="display: none;">this field is required</span>
					</div>
				</div>	
				
			</form>
			
		</div>
	
		<div class="modal-footer">
			<a {{action "validForm"}} href="#" class="btn btn-inverse" data-dismiss="modal">Save</a>
			<a {{action "cancelForm"}} href="#" class="btn" data-dismiss="modal">Close</a>
		</div>
	
	</div>
	
	<div {{action "cancelForm"}} class="modal-backdrop fade in"></div>
	<!-- End of user code -->
</script>

